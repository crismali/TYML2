<div class="note-form">
<h1>Forgot your password? No big deal, just enter your email address below and click submit.</h1>
<br />  
<%= form_tag( send_reset_password_url, method: 'put') do %>

  <%= email_field_tag :email, nil, placeholder: 'Email' %>
  <div class="input-container">
    <%= submit_tag 'Submit' %>
  </div>

<% end -%>
</div>
