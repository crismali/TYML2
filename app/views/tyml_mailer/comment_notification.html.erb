<h2>New comment from <%= @comment.user.name %></h2>

<p><%= @comment.comment_text %></p>

<p>Re: <%= link_to "#{@comment.tyml.url}", @comment.tyml.url %></p>

<% if @tyml.receiver.confirmed %>
 <p><%= link_to "Reply from your TYML dashboard", root_url %></p>
<% else %>
 <p><%= link_to "Reply by signing up for TYML", root_url %></p>
<% end %>
