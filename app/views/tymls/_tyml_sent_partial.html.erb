<div id="tyml_<%= tyml.id %>">

  <div class="tyml-container group" >

  <header class="tyml-header">
    <% if tyml.receiver.profile_pic.blank? %>
      <div class="tyml-profile-image"><%= image_tag asset_path('default_avatar.png') %></div>
    <% else %>
      <div class="tyml-profile-image"><%= image_tag tyml.receiver.profile_pic %></div>
    <% end %>
      <span class="tyml-copy">You thought <span class="tyml-user"><%= tyml.receiver.name.blank? ? tyml.receiver.email : tyml.receiver.name %></span> might like&hellip;</span>
    <p class="tyml-url"><%=  link_to tyml.url, view_url(tyml), :method => 'put', :title => tyml.url, :target => '_blank' %></p>
  </header>

  <div class="tyml-content-wrap">
    <div class="tyml-note">
      <% unless tyml.note.blank? %>
        <p><%=  tyml.note %></p>
      <% end %>
      <time datetime="<%= tyml.created_at %>"><%= "#{time_ago_in_words(tyml.created_at)} ago" %>

         / <%= link_to 'Archive', archive_or_unarchive_url(tyml), :method => 'put', :remote => true %>
         / <%= link_to 'Delete', tyml_url(tyml), :method => 'delete', :remote => true %>
      </time>
    </div>

      <div class="comments-container">
        <% tyml.comments.each do |comment| %>
          <%= render '/comments/comment', comment: comment %>
        <% end %>
        <%= render '/comments/comment_form', tyml: tyml %>
      </div>
    </div>
  </div>
</div>
