<div class="note-form">
  <%= form_tag(sessions_url, :method => :post) do %>
    <%= email_field_tag :email, nil, :placeholder => "Email" %>
    <%= password_field_tag :password, nil, :placeholder => "Password" %>
    <div class="input-container">
      <%= submit_tag "Sign in" %>
    </div>
  <% end %>
</div>
